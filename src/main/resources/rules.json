[
  {
    "ruleName": "SAP Hours",
    "description": "Manages rewards and penalties related to SAP hours logging.",
    "active": true,
    "groupBasedActivity": true,
    "conditions": [
      {
        "type": "action",
        "value": "did_not_key_in_sap_hour"
      }
    ],
    "outcomes": [
      {
        "type": "penalty",
        "points": -2,
        "target": "offender",
        "reason": "SAP Hours Offender in Group"
      },
      {
        "type": "award",
        "points": 1,
        "target": "compliant",
        "reason": "All Group Members SAP Hours Compliant"
      }
    ],
    "cap": {
      "maxPoints": 2
    }
  },
